<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rounded_edittext"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/barbell"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/barbell_pic" />

    <TextView
        android:id="@+id/challenge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/barbell"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_toEndOf="@id/barbell"
        android:text="txt"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:textSize="15sp"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txt"
        android:layout_alignBottom="@id/barbell"
        android:layout_alignLeft="@id/challenge_name"
        android:layout_alignStart="@id/challenge_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>