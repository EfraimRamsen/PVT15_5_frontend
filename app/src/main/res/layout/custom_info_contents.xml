<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- rad 1: -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/gym_icon"
                android:layout_width="12sp"
                android:layout_height="14sp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:adjustViewBounds="true"
                android:layout_gravity="start"/> <!-- might not work, delete mayhaps -->

            <TextView
                android:id="@+id/gym_name"
                android:layout_width="wrap_content"
                android:layout_height="14sp"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="#ff000000"
                android:textSize="12sp"
                 />

        </LinearLayout>

        <!-- rad 2: -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gym_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:adjustViewBounds="true"
                android:layout_gravity="start"/>
            <ImageView
                android:id="@+id/gym_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:adjustViewBounds="true" />
            <ImageView
                android:id="@+id/gym_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:adjustViewBounds="true" />
            <ImageView
                android:id="@+id/gym_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:adjustViewBounds="true" />
            <ImageView
                android:id="@+id/gym_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/gym_ratings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="#ff000000"
                android:textSize="12sp"
                />
            />
        </LinearLayout>

        <!-- rad 3: -->
        <Button
            android:id="@+id/gym_button_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="markerButton"
            android:text="@string/visa_mer" />

    </LinearLayout>

</LinearLayout>